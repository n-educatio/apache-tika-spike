<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    {% block add_file %}
                        {% include 'TikaBundle:UpFile:new.html.twig' %}
                    {% endblock %}
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {% block file %}
                        {{ render(controller('TikaBundle:UpFile:index')) }}
                    {% endblock %}
                </div>
                <div class="col-md-8">
                    {% block meta_data %}
                        {% include 'TikaBundle:UpFile:show.html.twig' %}
                    {% endblock %}
                </div>
            </div>
        </div>
            {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
            <script src="{{ asset('bundles/TikaBundle/js/metadata.loader.js') }}"></script>
            <script src="{{ asset('bundles/TikaBundle/js/search.file.js') }}"></script>
        {% endblock %}
    </body>
</html>
